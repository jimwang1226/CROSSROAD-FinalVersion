<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/canteen_background"
    tools:context="com.community.protectcommunity.CanteenFragment"
    tools:ignore="MissingPrefix">

    <!-- two boys inside the classroom view -->
    <View
        android:id="@+id/canteen_two_boys_inside_view"
        android:layout_width="292dp"
        android:layout_height="150dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/canteen_two_boys_inside"
        android:visibility="invisible"/>

    <!-- user inside the classroom view -->
    <!-- set the background according to gender -->
    <View
        android:id="@+id/canteen_user_insdie_view"
        android:layout_width="146dp"
        android:layout_height="150dp"
        android:layout_marginRight="322dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/canteen_user_boy_inside"
        android:visibility="invisible"/>

    <!-- Gracie character view -->
    <View
        android:id="@+id/canteen_gracie_inside_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gracie_inside_classroom"
        android:visibility="invisible"/>

    <!-- story chat box one -->
    <View
        android:id="@+id/canteen_story_chat_box_one"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="450dp"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/canteen_story_chat_box_one"
        android:visibility="invisible"/>

    <!-- mason chat box one -->
    <View
        android:id="@+id/canteen_mason_chat_box_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/canteen_mason_chat_box_one"
        android:visibility="invisible"/>

    <!-- mason chat box two -->
    <View
        android:id="@+id/canteen_mason_chat_box_two"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/canteen_mason_chat_box_two"
        android:visibility="invisible"/>

    <!-- jack chat box one -->
    <View
        android:id="@+id/canteen_jack_chat_box_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/canteen_jack_chat_box_one"
        android:visibility="invisible"/>

    <!-- jack chat box one -->
    <View
        android:id="@+id/canteen_jack_chat_box_two"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/canteen_jack_chat_box_two"
        android:visibility="invisible"/>

    <!-- story chat box one -->
    <View
        android:id="@+id/canteen_story_chat_box_two"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/canteen_story_chat_box_two"
        android:visibility="invisible"/>

    <!-- return to main screen button -->
    <Button
        android:id="@+id/return_to_mainscreen_button_canteen_fragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/return_button_background"/>

    <!-- next button -->
    <!-- set visibility temporary to visible, need to change to gone later-->
    <Button
        android:id="@+id/next_button_canteen_fragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/next_button_background"
        android:visibility="gone"/>

    <!-- play again button -->
    <Button
        android:id="@+id/play_again_button_canteen_fragment"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/watch_again_background"
        android:enabled="false"
        android:visibility="gone"
        />

    <!-- skip button -->
    <!-- skip button -->
    <Button
        android:id="@+id/skip_button_canteen_fragment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/skip_button_background"
        />

</RelativeLayout>