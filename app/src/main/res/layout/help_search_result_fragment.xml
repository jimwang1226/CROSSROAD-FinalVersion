<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.community.protectcommunity.MainScreenActivity"
    android:background="@drawable/fact_sheet_background"
    tools:ignore="MissingPrefix">
    <RelativeLayout
        android:id="@+id/help_search_result_left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_width="320dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@drawable/help_hospital_background">
        <ListView
            android:layout_centerInParent="true"
            android:id="@+id/help_search_result_left_lv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:fastScrollEnabled="true"
            android:background="@drawable/opacity_20_round_rectangle"
            android:dividerHeight="2dp"
            android:divider="#9eb5dd"
            fontPath="fonts/Oh_Whale.ttf">
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help_search_result_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_width="320dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@drawable/help_family_counselling_background">
        <ListView
            android:layout_centerInParent="true"
            android:id="@+id/help_search_result_right_lv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:fastScrollEnabled="true"
            android:background="@drawable/opacity_20_round_rectangle"
            android:dividerHeight="2dp"
            android:divider="#9eb5dd"
            fontPath="fonts/Oh_Whale.ttf">
        </ListView>
    </RelativeLayout>
    <Button
        android:id="@+id/help_return_to_for_parents_screen_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/return_button_background"/>
</RelativeLayout>