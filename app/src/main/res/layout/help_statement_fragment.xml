<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.community.protectcommunity.MainScreenActivity"
    android:background="@drawable/fact_sheet_background"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:id="@+id/help_statement_fragment_layout"
        android:layout_centerInParent="true"
        android:layout_width="500dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@drawable/round_corner_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_width="450dp"
                android:layout_height="380dp"
                android:background="@drawable/help_statement_page">
            </View>
            <Button
                android:id="@+id/help_start_btn"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/help_start_button_background"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/help_return_to_for_parents_screen_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/return_button_background"/>
</RelativeLayout>