<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fact_sheet_background"
    tools:ignore="MissingPrefix">

    <ListView
        android:id="@+id/fact_sheet_lv"
        fontPath="fonts/Oh_Whale.ttf"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_corner_background"
        android:fastScrollEnabled="true"></ListView>

    <!-- return to main screen button -->
    <Button
        android:id="@+id/fact_sheet_return_to_for_parents_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/return_button_background" />
</RelativeLayout>