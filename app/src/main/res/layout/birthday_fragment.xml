<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/birthday_fragment_background"
    tools:context="com.community.protectcommunity.BirthdayFragment"
    tools:ignore="MissingPrefix">

    <!-- story chat box one -->
    <View
        android:id="@+id/birthday_story_chat_box_one"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/birthday_story_chat_box_one"
        android:visibility="invisible"/>

    <!-- two girls inside the room view -->
    <View
        android:id="@+id/birthday_two_girls_inside_view"
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/birthday_two_girls_inside"
        android:visibility="invisible"/>

    <!-- user inside the room view, far -->
    <!-- set the background according to gender -->
    <View
        android:id="@+id/birthday_user_inside_far_view"
        android:layout_width="100dp"
        android:layout_height="143dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boy"
        android:visibility="invisible"/>

    <!-- user inside the room view, near-->
    <!-- set the background according to gender -->
    <View
        android:id="@+id/birthday_user_inside_near_view"
        android:layout_width="146dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/birthday_user_inside_near_view"
        android:visibility="invisible"/>

    <!-- gracie chat box one -->
    <View
        android:id="@+id/birthday_gracie_chat_box_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/birthday_gracie_chat_box_one"
        android:visibility="invisible"/>

    <!-- gracie chat box two -->
    <View
        android:id="@+id/birthday_gracie_chat_box_two"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/birthday_gracie_chat_box_two"
        android:visibility="invisible"/>

    <!-- gracie chat box three -->
    <View
        android:id="@+id/birthday_gracie_chat_box_three"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/birthday_gracie_chat_box_three"
        android:visibility="invisible"/>

    <!-- lisa chat box one -->
    <View
        android:id="@+id/birthday_lisa_chat_box_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/birthday_lisa_chat_box_one"
        android:visibility="invisible"/>

    <!-- gracie chat box four -->
    <View
        android:id="@+id/birthday_gracie_chat_box_four"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/birthday_gracie_chat_box_four"
        android:visibility="invisible"/>

    <!-- gracie chat box five -->
    <View
        android:id="@+id/birthday_gracie_chat_box_five"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/birthday_gracie_chat_box_five"
        android:visibility="invisible"/>

    <!-- next button -->
    <!-- set visibility temporary to visible, need to change to gone later-->
    <Button
        android:id="@+id/next_button_birthday_fragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/next_button_background"
        android:visibility="gone"/>

    <!-- play again button -->
    <Button
        android:id="@+id/play_again_button_birthday_fragment"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/watch_again_background"
        android:enabled="false"
        android:visibility="gone"
        />

    <!-- skip button -->
    <!-- skip button -->
    <Button
        android:id="@+id/skip_button_birthday_fragment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/skip_button_background"
        />

    <!-- return to main screen button -->
    <Button
        android:id="@+id/return_to_mainscreen_button_birthday_fragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/return_button_background"/>

</RelativeLayout>