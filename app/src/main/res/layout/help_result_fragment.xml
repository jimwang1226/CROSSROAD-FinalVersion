<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.community.protectcommunity.MainScreenActivity"
    android:background="@drawable/fact_sheet_background"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:id="@+id/help_q4_fragment_layout"
        android:layout_centerInParent="true"
        android:layout_width="500dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@drawable/round_corner_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/help_result_text"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_width="480dp"
                android:layout_height="380dp"
                android:background="@drawable/help_result_demo">
            </View>

            <TextView
                android:id="@+id/help_result_article_link"
                android:gravity="center"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="120dp"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/help_result_article_link_two"
                android:gravity="center"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="140dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:visibility="gone" />
            <EditText
                android:id="@+id/help_result_postcode"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:cursorVisible="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:inputType="textPhonetic"
                android:textCursorDrawable="@null"
                android:background="@drawable/edit_text_style"
                android:hint="@string/postcode"
                fontPath="fonts/Oh_Whale.ttf"
                />
            <Button
                android:id="@+id/help_search_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/help_result_postcode"
                android:background="@drawable/search_button_background"/>

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/help_return_to_for_parents_screen_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/return_button_background"/>
</RelativeLayout>